{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "lib",
    "target": "es6",
    "module": "commonjs",
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "alwaysStrict": false
  },
  "include": ["lib/**/*"],
  "exclude": ["lib/gatsby-browser.*", "lib/gatsby-ssr.*"]
}
